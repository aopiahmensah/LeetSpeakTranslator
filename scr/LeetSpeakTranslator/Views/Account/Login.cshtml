@model LeetSpeakTranslator.Models.LoginViewModel
@{
    Layout = null;

    ViewBag.Title = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <title>
        Leet Speak Translator - Login
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

</head>

<body style="">
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-sm-center h-100">
                <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                    <div class="text-center my-5">
                        @* <img class="img-responsive" alt="logo" src="~/images/cropped-logo.png" height="70%" width="70%" style="margin-top: -15px"> *@
                        <br /><span style="color: white; font-size: 20px; font-weight: bold; text-align:justify">
                            Leet Speak Translator
                        </span>
                    </div>
                    <div class="card shadow-lg">
                        <div class="card-body p-5">
                            <h1 class="fs-4 card-title fw-bold mb-4">Login</h1>
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success">
                                    @TempData["SuccessMessage"]
                                </div>
                            }

                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger">
                                    @TempData["ErrorMessage"]
                                </div>
                            }
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <form asp-controller="Account" asp-action="Login" method="POST" class="needs-validation" novalidate="" autocomplete="off">
                                @Html.AntiForgeryToken()
                                <div class="mb-3">
                                    <label class="mb-2 text-muted">Username</label><span style="color: red; margin-left: 5px">*</span>
                                    <input asp-for="Username" class="form-control" id="email" required="true" />
                                    <div class="invalid-feedback">
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="mb-2 w-100">
                                        <label class="text-muted" for="password">Password</label><span style="color: red; margin-left: 5px">*</span>
                                    </div>
                                    <input asp-for="Password" id="password" class="form-control" required>
                                    <div class="invalid-feedback">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="d-flex align-items-center" align="center">
                                    <button type="submit" class="btn btn-primary ms-auto">
                                        Login
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>



